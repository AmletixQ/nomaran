generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Victim {
  id Int @id @default(autoincrement())

  fullname   String
  birthYear  Int?    @map("birth_year")
  birthPlace String? @map("birth_place")
  national   String?
  otherData  String? @map("other_data")

  category Category

  @@index([fullname])
  @@index([birthPlace])
  @@index([national])
  @@index([otherData])
  @@map("victims")
}

enum Category {
  REPRESSED
  DISPOSSESSED
  NATATTRIBUTE
}
